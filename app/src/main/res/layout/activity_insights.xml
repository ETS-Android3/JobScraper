<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dip"
            android:layout_alignParentTop="true"
            android:background="@drawable/_32_5" />

        <!-- Your content -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/_32_5_r" />

        <TextView
            android:id="@+id/recommendation_button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button_pbg"
            android:gravity="center_horizontal"
            android:onClick="getRecommendation"
            android:padding="10dp"
            android:text="Get Recommendations"
            android:textAllCaps="false"
            android:textColor="@color/whiteTextColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cluster_button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/button_pbg"
            android:gravity="center_horizontal"
            android:onClick="getClusters"
            android:padding="10dp"
            android:text="Cluster Offers"
            android:textAllCaps="false"
            android:textColor="@color/whiteTextColor"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>