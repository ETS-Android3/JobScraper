<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.job.scrape">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JobScrape">
        <activity
            android:name=".Main.SkillsFormActivity"
            android:exported="false" />
        <activity
            android:name=".Main.SingleOfferActivity"
            android:exported="false" />
        <activity
            android:name=".Main.SearchScreenActivity"
            android:exported="false" />
        <activity android:name=".Auth.SignUpActivity" />
        <activity android:name=".Auth.SignInActivity" />
        <activity android:name=".Front.WelcomeScreenActivity" />
        <activity android:name=".Front.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main.MainScreenActivity" />
    </application>

</manifest>